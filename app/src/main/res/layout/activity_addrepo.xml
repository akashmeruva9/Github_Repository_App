<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Addrepo">


    <RelativeLayout
        android:id="@+id/addrepoll1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        >
        <TextView
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Repo"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="80dp"
            />

        <Button
            android:id="@+id/addepoback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_baseline_arrow_back_ios_24"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/addrepotv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/addrepoll1"
        android:layout_marginTop="30dp"
        android:text="Owner/Organization"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/owner_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/addrepotv1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittextback"
        />


    <TextView
        android:id="@+id/addrepotv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/owner_edittext"
        android:layout_marginTop="30dp"
        android:text="Repo Name"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/reponame_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/addrepotv2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittextback"
        />

    <Button
        android:id="@+id/confirm_repobtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/reponame_edittext"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/black"
        android:text="Add"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>