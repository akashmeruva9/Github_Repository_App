<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/Cv1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/organisationname"
        android:layout_marginTop="10dp"
          app:cardCornerRadius="25dp"
        android:layout_marginLeft="15dp"
        >
    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/black"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/organisationname"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Cv1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:text="organization"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/language_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/repositorydescrription"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="90dp"
        android:text="kotlin"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/repositorydescrription"
        app:layout_constraintLeft_toRightOf="@id/language_used"
        android:layout_marginLeft="20dp"
        android:text="2022-05-25"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/repositorytitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="55dp"
        app:layout_constraintLeft_toRightOf="@id/Cv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="repository_name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="90dp"
        />


    <TextView
        android:id="@+id/repositorydescrription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="55dp"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@id/repositorytitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Description of repository in 2
lines maximum"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:layout_marginLeft="90dp"
        />

    <Button
        android:id="@+id/share_repo_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_share_24"
        />

    <Button
        android:id="@+id/delete_repo_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/share_repo_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:background="@drawable/ic_baseline_delete_24"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/language_used"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>